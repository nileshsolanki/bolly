<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
android:paddingBottom="32dp"
android:layout_width="match_parent"
android:layout_height="match_parent">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="start"
            android:text="Recent Additions"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"/>


        <TextView
            android:id="@+id/tv_more_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more >"
            android:textColor="@color/colorAccent"
            android:layout_gravity="end|bottom"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:foreground="?android:selectableItemBackground"/>


    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movie_concise_nowplaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal" />







    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="start"
            android:text="Top Rated"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"/>


        <TextView
            android:id="@+id/tv_more_rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more >"
            android:textColor="@color/colorAccent"
            android:layout_gravity="end|bottom"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:foreground="?android:selectableItemBackground"/>


    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movie_concise_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal" />






    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="start"
            android:text="Hot Genres"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"/>



    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movie_concise_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal" />








    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="start"
            android:text="Hits by Year"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"/>


    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movie_concise_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


</LinearLayout>






</ScrollView>